<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_muscules"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margin"
                    android:layout_marginBottom="@dimen/content_margin"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginStart="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/content_margin"
                        android:layout_marginTop="@dimen/content_margin_min"
                        android:layout_marginBottom="@dimen/content_margin_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:hint="@string/sensor_1">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_sensor_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginStart="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/content_margin"
                        android:layout_marginTop="@dimen/content_margin_min"
                        android:layout_marginBottom="@dimen/content_margin_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:hint="@string/sensor_2">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_sensor_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginStart="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/content_margin"
                        android:layout_marginTop="@dimen/content_margin_min"
                        android:layout_marginBottom="@dimen/content_margin_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:hint="@string/sensor_3">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_sensor_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginStart="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/content_margin"
                        android:layout_marginTop="@dimen/content_margin_min"
                        android:layout_marginBottom="@dimen/content_margin_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:hint="@string/sensor_4">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_sensor_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginStart="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/content_margin"
                        android:layout_marginTop="@dimen/content_margin_min"
                        android:layout_marginBottom="@dimen/content_margin_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:hint="@string/sensor_5">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_sensor_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginStart="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/content_margin"
                        android:layout_marginTop="@dimen/content_margin_min"
                        android:layout_marginBottom="@dimen/content_margin_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:hint="@string/sensor_6">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_sensor_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginStart="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/content_margin"
                        android:layout_marginTop="@dimen/content_margin_min"
                        android:layout_marginBottom="@dimen/content_margin_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:hint="@string/sensor_7">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_sensor_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_margin"
            android:text="@string/save" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>